{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "hooks": {
    "after:bump": [
      "node updateDateInPublicCodeYml.js publiccode.yml releaseDate"
    ]
  },
  "git": {
    "commitMessage": "chore: bump to version v${version}",
    "tag": false
  },
  "github": {
    "release": true,
    "update": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true,
    "allowSameVersion": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "publiccode.yml",
          "path": "softwareVersion"
        }
      ]
    },
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  }
}